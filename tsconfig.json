{
  "compilerOptions": {
    "sourceMap": true,
    "types": ["node", "jest"],
    "target": "ES5",
    "module": "commonjs", 
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "noImplicitAny": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "skipLibCheck": true
  },
  "includes": [
     "./src/**/*.ts",
  ],
  "exclude": [
    "./node_modules",
    "./dist",
    "src/**/*.test.ts",
    "babel.config.js",
    "jest.config.js",
  ]
}